---
import { Image } from 'astro:assets'

import gallery1 from '../assets/images/gallery/home-gallery-image-1.jpeg'
import gallery2 from '../assets/images/gallery/home-gallery-image-2.webp'
import gallery3 from '../assets/images/gallery/home-gallery-image-3.webp'
import gallery4 from '../assets/images/gallery/home-gallery-image-4.webp'
import gallery5 from '../assets/images/gallery/home-gallery-image-5.webp'

const images = [
  {
    src: gallery1,
    alt: 'Mountain view',
    large: true,
  },
  {
    src: gallery2,
    alt: 'Climbing',
    large: false,
  },
  {
    src: gallery3,
    alt: 'Monks',
    large: false,
  },
  {
    src: gallery4,
    alt: 'Snow hiking',
    large: false,
  },
  {
    src: gallery5,
    alt: 'Hiker',
    large: false,
  },
]
---

<section id="gallery" class="flex h-screen w-full flex-col md:h-[70vh] md:flex-row lg:h-screen">
  <!-- Large Image (Left Side) -->
  <div class="group relative h-full cursor-pointer overflow-hidden">
    <Image
      width={600}
      height={400}
      src={images[0].src}
      alt={images[0].alt}
      loading="lazy"
      class="h-full w-full object-cover transition-transform duration-700 ease-in-out group-hover:scale-110"
    />
    <div
      class="absolute inset-0 flex items-center justify-center bg-black/40 opacity-0 transition-opacity duration-500 group-hover:opacity-100"
    >
    </div>
  </div>

  <!-- Grid Images (Right Side) -->
  <div class="grid h-full grid-cols-2 grid-rows-2">
    {
      images.slice(1).map((img) => (
        <div class="group relative cursor-pointer overflow-hidden">
          <Image
            width={300}
            height={300}
            src={img.src}
            alt={img.alt}
            loading="lazy"
            class="h-full w-full object-cover transition-transform duration-700 ease-in-out group-hover:scale-110"
          />
          <div class="absolute inset-0 flex items-center justify-center bg-black/40 opacity-0 transition-opacity duration-500 group-hover:opacity-100" />
        </div>
      ))
    }
  </div>
</section>
