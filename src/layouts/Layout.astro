---
import '../styles/global.css'
import '@fontsource/montserrat'
import Footer from '../components/Footer.astro'
import Navbar from '../components/Navbar.astro'
import FloatingWhatsApp from '../components/FloatingWhatsApp.astro'
import SEO from '../components/SEO.astro'
import { Toaster } from 'sonner'

interface Props {
  title?: string
  description?: string
  image?: string
}

const { title = 'Hospedaje & Confort', description, image } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <SEO title={title} description={description} image={image} />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <FloatingWhatsApp />
    <Toaster client:load richColors closeButton />
    <script defer src="https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js"></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
</style>
